<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" 
            stylesheets="@../styles/Styles.css" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.adrian.gestionfct.controller.LoginController">
    
    <!-- Fondo azul -->
    <Rectangle fill="#667eea" height="400.0" width="500.0" 
               AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"/>
    
    <!-- Contenedor del formulario -->
    <VBox alignment="CENTER" spacing="20" 
          AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" 
          AnchorPane.leftAnchor="75" AnchorPane.rightAnchor="75">
        
        <!-- Título -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="GestionFCT" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Sistema de Gestión de FCT" style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.8);"/>
        </VBox>
        
        <!-- Formulario con fondo blanco -->
        <VBox alignment="CENTER" spacing="15" 
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.3)" radius="10"/>
            </effect>
            
            <Label text="Iniciar Sesión" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <!-- Campo Email -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Email:" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                <TextField fx:id="txtEmail" 
                          promptText="usuario@ejemplo.com" 
                          prefWidth="250" prefHeight="35"/>
            </VBox>
            
            <!-- Campo Contraseña -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Contraseña:" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                <PasswordField fx:id="txtPassword" 
                              promptText="Introduce tu contraseña" 
                              prefWidth="250" prefHeight="35"
                              onAction="#handleLogin"/>
            </VBox>
            
            <!-- Mensaje de error -->
            <Label fx:id="lblMensaje" 
                   style="-fx-text-fill: red; -fx-font-size: 11px;" 
                   wrapText="true"/>
            
            <!-- Botones -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="btnLogin" 
                        text="Iniciar Sesión" 
                        onAction="#handleLogin"
                        prefWidth="120" prefHeight="35"
                        style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" color="rgba(102,126,234,0.4)" radius="5"/>
                    </effect>
                </Button>
                <Button text="Limpiar" 
                        onAction="#handleLimpiar"
                        prefWidth="80" prefHeight="35"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
        
        <!-- Footer -->
        <Label text="Proyecto Intermodular DAM 2024-2025" 
               style="-fx-font-size: 10px; -fx-text-fill: rgba(255,255,255,0.6);"/>
    </VBox>
</AnchorPane>
